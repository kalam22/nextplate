    "postcss": "^8.5.2",
    "prettier": "^3.5.1",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "sass": "^1.85.0",
    "sharp": "^0.33.5",
    "tailwindcss": "^4.0.6",

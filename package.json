    "marked": "^15.0.7",
    "negotiator": "^1.0.0",
    "next": "15.1.7",
    "next-mdx-remote": "^5.0.0",
    "next-sitemap": "^4.2.3",
    "next-themes": "^0.4.4",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-gtm-module": "^2.0.11",
